{
    "root" : true,
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["airbnb-base", "eslint:recommended", "plugin:import/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
      "no-underscore-dangle": "off",
      "no-console": "off",
      "linebreak-style": "off",
      "import/no-extraneous-dependencies": [
        "error", { "devDependencies": false, "optionalDependencies": false, "peerDependencies": false }
      ],
    "max-len": ["error", { "code": 120 }]
    }
}
